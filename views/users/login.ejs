<% layout("/layouts/boilerplate") %>

<style>
    .row .login {
        font-size: 2.2rem;
        margin-top: 1rem;
        text-align: center;
    }
</style>
<div class="row">
    <div class="col-6 offset-3">
        <h1 class="col-6 offset-3 login">Login</h1>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-lable">Username</label>
                <input name="username"
                   id="username"
                   type="text"
                   class="form-control"
                   required/>
            </div>

            <div class="mb-3">
                <label for="password" class="form-lable">Password</label>
                 <input name="password"
                   id="password"
                   type="password"
                   class="form-control"
                   required/>
            </div>
         <button class="btn btn-success">Login</button>

       </form>
    </div>
</div>